<?xml version="1.0"?>
<config>
  <modules>
    <Creare_DynamicSitemap>
      <version>2.0.2</version>
    </Creare_DynamicSitemap>
  </modules>
  <frontend>
    <routers>
      <dynamicsitemap>
        <use>standard</use>
        <args>
         <module>Creare_DynamicSitemap</module>
         <frontName>sitemap</frontName>
       </args>
     </dynamicsitemap>
   </routers>
   <layout>
    <updates>
      <dynamicsitemap>
        <file>creare_dynamicsitemap.xml</file>
      </dynamicsitemap>
    </updates>
  </layout>
</frontend>
<global>
    <blocks>
      <dynamicsitemap>
        <class>Creare_DynamicSitemap_Block</class>
      </dynamicsitemap>
    </blocks>
  <helpers>
      <dynamicsitemap>
        <class>Creare_DynamicSitemap_Helper</class>
      </dynamicsitemap>
    </helpers>
  </global>
<default>
  <dynamicsitemap>
    <dynamicsitemap>
      <showcms>1</showcms>
      <showcategories>1</showcategories>
      <showxml>0</showxml>
      <showaccount>1</showaccount>
      <showcontact>1</showcontact>
    </dynamicsitemap>
  </dynamicsitemap>
</default> 
<adminhtml>
    <acl>
      <resources>
        <all>
          <title>Allow Everything</title>
        </all>
        <admin>
          <children>
            <system>
              <children>
                <config>
                  <children>
                    <dynamicsitemap>
                      <title>Creare Group - Dynamic Sitemap</title>
                    </dynamicsitemap>
                  </children>
                </config>
              </children>
            </system>
          </children>
        </admin>
      </resources>
    </acl>
  </adminhtml>
</config> 