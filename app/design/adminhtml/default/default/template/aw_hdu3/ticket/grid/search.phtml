?><?php /** @var AW_Helpdesk3_Block_Adminhtml_Ticket_Grid_Search $this */?>
<div>
    <label for="awhdu3-ticket-grid-head-search"><b><?php echo $this->__('Search for Ticket');?></b></label>
    <input id="awhdu3-ticket-grid-head-search" type="text" value="<?php echo base64_decode($this->getValue());?>" class="input-text" style="width:200px"/>
</div>
<script type="text/javascript">
    $('awhdu3-ticket-grid-head-search').observe('change', function(e){
        var value = $('awhdu3-ticket-grid-head-search').getValue();
        awhdu3TicketGridJsObject.addVarToUrl(<?php echo Zend_Json::encode($this->getParamKey());?>, Base64.encode(value));
    });
    Event.observe(window, 'load', function(e){
        var awhdu3TicketGridOriginalResetFilterFn = awhdu3TicketGridJsObject.resetFilter.bind(awhdu3TicketGridJsObject);
        awhdu3TicketGridJsObject.resetFilter = function() {
            awhdu3TicketGridJsObject.addVarToUrl(<?php echo Zend_Json::encode($this->getParamKey());?>, '');
            awhdu3TicketGridOriginalResetFilterFn();
        };
    });
</script>