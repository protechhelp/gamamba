        <div style="" class="validation-advice">{{file.error}}</div>
    </div>

    <div class="mp-file-thumbnail" ng-if="hasFile()" >
        <a class="image {{file.file_type}}" href="{{file.url}}" ng-class="{'filetype': !file.is_image}" target="_blank">
            <img ng-if="file.is_image"  src="{{file.thumbnail_url}}"/>
        </a>
