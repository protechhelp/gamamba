<div class="mp-file-upload-container">

    <input id="{{config.html_id}}" class="input-file {{config.class}}" ng-class="{'required-file':getRequired(),'field-ready':hasValue()}"
           ng-disabled="hasFile() || showProgress()" type="file" name="{{config.attribute_name}}_file[]"
           oi-file="options"
        />

    <input type="hidden" id="{{config.html_id}}_hidden" name="{{config.attribute_name}}" value="{{file.value}}"/>
