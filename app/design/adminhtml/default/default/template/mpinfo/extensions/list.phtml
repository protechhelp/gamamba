<?php if (count($this->getExtensions())): ?>
<table class="form-list">
    <tbody>
    <?php foreach ($this->getExtensions() as $extension): ?>
    <tr>
        <td class="mp-name info-cell">
        <?php if ($extension->getProductUrl() && $extension->getProductName()): ?>
            <a href="<?php echo $extension->getProductUrl(); ?>" target="_blank"><?php echo $this->htmlEscape($extension->getProductName()); ?></a>
        <?php else: ?>
            <span><?php echo $extension->getName(); ?></span>
        <?php endif; ?>
        </td>
        <td class="mp-version info-cell"><?php echo $extension->getVersion() ?></td>
        <td class="mp-icon info-cell"><img alt="<?php echo $extension->getStatusLabel(); ?>" src="<?php echo $this->getSkinUrl("mpinfo/images/".$extension->getStatus().".png"); ?>"></td>
        <td class="mp-description info-cell <?php echo $extension->getStatus(); ?>"><?php echo $extension->getStatusLabel(); ?></td>
    </tr>
    <?php endforeach; ?>
    </tbody>
</table>
<?php else: ?>
    <?php echo $this->__("No installed extensions found. Please feel free to ask a question about our extensions at %s.", "<a href=\"mailto: support@magpleasure.com\" target=\"_blank\">support@magpleasure.com</a>"); ?>
<?php endif; ?>
<script type="text/javascript">
    Fieldset.applyCollapse('mpinfo_extensions');
</script>