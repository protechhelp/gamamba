<?php if ($_info = $this->getInfo()): ?>
<?php $method = explode('_',$_info->getCcNumberEnc()); ?>
<?php switch($method[0]){ ?>
<?php case 'CC': ?>
    <?php echo $this->__('Name on the Card: %s', $this->htmlEscape($_info->getCcOwner())) ?><br/>
    <?php echo $this->__('Credit Card Type: %s', $this->htmlEscape($this->getCcTypeName())) ?><br/>
    <?php echo $this->__('Credit Card Number: xxxx-%s', $this->htmlEscape($_info->getCcLast4())) ?><br/>
    <?php echo $this->__('Expiration Date: %s/%s', $this->htmlEscape($this->getCcExpMonth()), $this->htmlEscape($_info->getCcExpYear())) ?>
    <?php break; ?>
<?php case 'DD': ?>
    <?php echo $this->__('Account Holder: %s', $this->htmlEscape($_info->getCcOwner())) ?><br/>
    <?php echo $this->__('Bank Code: %s', $this->htmlEscape($method[1])) ?><br/>
    <?php echo $this->__('Account Number: %s', $this->htmlEscape($_info->getCcLast4())) ?><br/>
    <?php break; ?>
<?php default: ?>
    <?php echo $this->__('Moneybookers Quick Checkout Enterprise') ?><br/>
<?php } ?>
<?php endif; ?>