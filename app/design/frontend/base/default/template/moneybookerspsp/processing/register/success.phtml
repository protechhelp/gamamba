<?php $_formPrefix = Mage::helper('moneybookerspsp')->getFormPlaceholderPrefix(); ?>
<a id="moneybookerspsp_change_account_data" href="#" onclick="mbPspChangeAccountData();"><?php echo $this->__("Change Account Data")?></a>
<script type="text/javascript">
    parent.checkout.setLoadWaiting(false);
    parent.payment.isMoneybookersPspDataValid[parent.payment.currentMethod] = true;
    parent.payment.save();

    function mbPspChangeAccountData(){
        var method = parent.payment.currentMethod;
        parent.payment.isMoneybookersPspDataValid[method] = false;
        parent.document.getElementById('<?php echo $_formPrefix?>'+method).src = '<?php echo $this->getMethod()->getWPFRegisterFormUrl(); ?>';
    }
</script>