<script type="text/javascript">
$t=jQuery.noConflict();
$t(document).ready(function() {
	$t("#content").find("[id^='tab']").hide(); // Hide all content
	$t("#tabs li:first").attr("id","current"); // Activate the first tab
	$t("#content #tab1").fadeIn(); // Show first tab's content
	
	$t('#tabs a').click(function(e) {
		e.preventDefault();
		if ($t(this).closest("li").attr("id") == "current"){ //detection for current tab
		return;       
		}
		else{             
		$t("#content").find("[id^='tab']").hide(); // Hide all content
		$t("#tabs li").attr("id",""); //Reset id's
		$t(this).parent().attr("id","current"); // Activate this
		$t('#' + $t(this).attr('name')).fadeIn(); // Show content for the current tab
		}
	});
	
	
	$t('.chat_box_main_top').mouseover(function(){
      $t('.chat_box_main_top').addClass('chat_box_main_top_chat');
    });
    $t('.chat_box_main_top').mouseout(function(){
		$t('.chat_box_main_top').removeClass('chat_box_main_top_chat');
    });
});


